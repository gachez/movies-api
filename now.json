{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@now/node-server"
    }
  ],
  "routes": [
    {
      "src": "/.*",
      "dest": "index.js"
    },
    {
      "src": "/movies",
      "dest": "/index.js",
      "methods": ["GET"]
    },
    {
      "src": "/movies/add",
      "dest": "/index.js",
      "methods": ["POST"]
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "PORT": "4000",
    "DATABASE_URI": "@movie-db"
  }
}